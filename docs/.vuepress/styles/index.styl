.page {
    padding-top: 3.6rem;
}


.fullWidth {
    .page {
        padding-top: 3.6rem;
        padding-left: 0;
        padding-bottom: 0;
        height: calc(100vh - 3.6rem);
    }

    .theme-default-content {
        padding: 0;
        margin: 0;
        max-width: none;
        height: 100%;
    }

    footer {
        display: none;
    }
}